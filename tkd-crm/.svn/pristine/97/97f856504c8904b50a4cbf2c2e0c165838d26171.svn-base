*{padding:0; margin:0;}
input{outline:none}
body,html{width:100%; height:100%;}
a{text-decoration:none;}
body{background:url(../../img/loginbj2.png) center 0 no-repeat;}
.loginCont{float:right; margin:200px 250px 0 0; width:500px; height:400px; background: rgba(255, 255, 255, 1) 0 0 no-repeat;}
.loginCont dl{padding:30px;}
.loginCont dl dt{border-bottom:1px solid #2199d7; font-size:30px; color:#2199d7; line-height:60px; text-align:center; font-family:"microsoft yahei";}
.loginCont dl dd.ddName{overflow:hidden; margin-top:25px; height:58px; background:#fff; border-radius:10px;}
.loginCont dl dd.ddName em{float:left; width:22px; height:24px; margin:18px 15px 0 25px; background:url(../../../static/img/yonghu.png) 0 0 no-repeat;}
.loginCont dl dd.ddName input{float:left; border:none; color:#ccc; height:48px; padding:5px; width:345px; font-size:18px; color:#333;}

.loginCont dl dd.ddPassword{overflow:hidden; margin-top:25px; height:58px; background:#fff; border-radius:10px;}
.loginCont dl dd.ddPassword em{float:left; width:22px; height:24px; margin:18px 15px 0 25px; background:url(../../../static/img/mima.png) 0 0 no-repeat;}
.loginCont dl dd.ddPassword input{float:left; border:none; color:#333; height:48px; padding:5px; width:345px; font-size:18px;}

.loginCont dl dd.ddTip{overflow:hidden; line-height:20px; margin-left: 60px}
.loginCont dl dd.ddTip span{float:left; color:red; font-size:12px;}
.loginCont dl dd.ddTip a{float:right; font-size:20px; color:#fff; font-family:"microsoft yahei";}

.loginCont dl dd.ddLoginBtn{height:58px;margin-top:30px;}
.loginCont dl dd.ddLoginBtn a{display:block; line-height:58px; text-align:center; color:#fff; font-size:28px; background-color:#2199d7; border-radius:10px;}
.loginCont dl dd.ddLoginBtn a:hover{background-color:#1b6aa5;}
.loginCont dl dd.ddRdes{text-align:center; color:#fff; font-size:16px; font-family:"microsoft yahei"; line-height:50px; margin-top:10px;} 
.loginCont dl dd.ddReg{}
.loginCont dl dd.ddReg a{display:block; height:56px; border:1px solid #fff; border-radius:10px; line-height:56px; text-align:center; color:#fff; font-size:22px;}
.loginCont dl dd.ddReg a:hover{color:#00c7c8; border:1px solid #00c7c8;}
.loginCont dl dd.ddDes{text-align:center; color:#bfbfbf; font-size:18px; font-family:"microsoft yahei"; margin-top:30px;}
.loginCont dl dd.ddDesTel{text-align:center; color:#bfbfbf; font-size:18px; font-family:"microsoft yahei"; margin-top:10px;}
.loginCont dl dd.ddDesTel span a{font-size:12px; margin-right:20px; color:#fff;}















