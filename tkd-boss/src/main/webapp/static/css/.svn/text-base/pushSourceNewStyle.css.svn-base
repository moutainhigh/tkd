 body, div, p, ul, ol, li, dl, dt, dd, form, input, table, img, h1, h2, h3, h4, h5, h6, header, section, footer, nav, figure, figcaption, article {
        margin: 0;
        padding: 0
    }

    .isbody {
        width: 300px;
        border: 1px solid #CCCCCC;
        position: relative;
    }

    .isimg img {
        width: 100%;
        height: 150px;
    }

    .imginfo {
        height: 25px;
        line-height: 25px;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        position: absolute;
        top: 125px;
        color: #ffffff;
        text-indent: 5px;
    }

    .newinfo {
        height: 100px;
        border-top: 1px solid #CCCCCC;
    }

    .newlist {
        margin-top: -3px;

    }

    .newinfo .newinfo1 {
        float: left;
        width: 65%;
        padding: 30px 7px 7px 7px;
    }

    .newinfo .newinfo2 {
        float: right;
        width: 30%;
    }

    .newinfo .newinfo2 img {
        width: 80px;
        height: 80px;
        margin-top: 10px;
        border: 1px solid #cccccc;
    }

    .htmlpush {
        width: 96%;
        margin: auto;
        margin-top: 10px;
    }

    .htmlpush img {
        width: 100%;
    }

    .backccc {
        width: 100%;
        height: 100px;
        background-color: rgba(204, 204, 204, 0.68);
        position: absolute;
        z-index: 1;
		display: none;
    }

    .backccc div {
        width: 20px;
        height: 22px;
        background-color: #CCCCCC;
        margin: auto;
        margin-top: 30px;
    }

    .backccc div:hover {
        background-color: #393737;
    }

    .backccc div img {
        width: 100%;
    }